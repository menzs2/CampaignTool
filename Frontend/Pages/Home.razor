@page "/"
@inject CampaignDataService dataService
@using System.Net.Http.Json
@using System.Text.Json
@using Shared;
@using Components;

<PageTitle>Campaign Home</PageTitle>

<h1>Hello, world!</h1>

@if (Campaigns != null && Campaigns.Any())
{
    <div>
        <Frontend.Components.ListComponent EntityList="@(Campaigns?.Cast<BaseEntityDto>().ToList())" EntityType="Kampagne" />
    </div>
}
else
{
    <p>Not data found.</p>
}


@code {

    protected List<CampaignDto>? Campaigns;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Campaigns = await dataService.GetCampaigns();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}