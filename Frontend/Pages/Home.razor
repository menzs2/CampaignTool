@page "/"
@inject HttpClient Httpclient
@using System.Net.Http.Json
@using System.Text.Json
@using Shared;
@using Components;

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

@if (campaigns != null && campaigns.Any())
{
     <ListComponent EntityList = campaigns></ListComponent>
}
else{
    <p>Not data found.</p>
}


@code {

    protected CampaignDto[] campaigns;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Httpclient.GetAsync("http://localhost:5043/api/campaign");
            response.EnsureSuccessStatusCode();
            var json = await response.Content.ReadAsStringAsync();
            campaigns = JsonSerializer.Deserialize<CampaignDto[]>(json);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}